<div class="container mt-5">
  <%= render "shared/title", title: "会員一覧" %>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customerlist| %>
          <tr>
            <td><%= customerlist.id %></td>
            <td>
              <%= link_to admin_customer_path(customerlist.id) do %>
                <%= customerlist.last_name + customerlist.first_name %>
              <% end %>
            </td>
            <td><%= customerlist.email %></td>
            <td>
              <% if customerlist.is_deleted == false %>
                <span class="text-success">有効</span>
              <% elsif customerlist.is_deleted == true %>
                <span class="text-secondary">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>