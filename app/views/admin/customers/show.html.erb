<div class="container mt-5">
  <%= render "shared/title", title: @customer.full_name + "さんの会員情報" %>
  <div class="row">
    <div class="row mt-3">
      <div class="col">会員ID</div>
      <div class="col"><%= @customer.id %></div>
    </div>

    <div class="row mt-3">
      <div class="col">氏名</div>
      <div class="col"><%= @customer.last_name + @customer.first_name %></div>
    </div>

    <div class="row mt-3">
      <div class="col">フリガナ</div>
      <div class="col"><%= @customer.last_name_kana + @customer.first_name_kana %></div>
    </div>

    <div class="row mt-3">
      <div class="col">郵便番号</div>
      <div class="col"><%= @customer.postal_code %></div>
    </div>

    <div class="row mt-3">
      <div class="col">住所</div>
      <div class="col"><%= @customer.address %></div>
    </div>

    <div class="row mt-3">
      <div class="col">電話番号</div>
      <div class="col"><%= @customer.telephone_number %></div>
    </div>

    <div class="row mt-3">
      <div class="col">メールアドレス</div>
      <div class="col"><%= @customer.email %></div>
    </div>

    <div class="row mt-3">
      <div class="col">会員ステータス</div>
      <div class="col">
        <% if @customer.is_deleted == false %>
          <span class="text-success">有効</span>
        <% elsif @customer.is_deleted == true %>
          <span class="text-secondary">退会</span>
        <% end %>
      </div>
    </div>

    <div class="mt-5">
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success mx-4" %>
      <%= link_to "注文履歴一覧を見る", one_person_admin_order_path, class: "btn btn-primary mx-4" %>
    </div>

  </div>
</div>
