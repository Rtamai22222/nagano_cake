<h1>Admin::Genres#edit</h1>
<p>Find me in app/views/admin/genres/edit.html.erb</p>

<div class="row">
  <h3>ジャンル編集</h3>
</div>
<div class="row">
  <%= form_with model: @genre, url: admin_genre_path, method: :patch, class: "row align-items-center" do |f| %>
    <div class="col-md-2 form-group align-items-center">
      <label for="genre-form">ジャンル名</label>
    </div>
    <div class="col-md-3 form-group">
      <%= f.text_field :name, class: "form-control", id: "genre-form" %>
    </div>
    <div class="col-md-auto form-group">
      <%= f.submit "Update Book", class: "btn btn-success" %>
    </div>
  <% end %>
</div>