Admin::Genres#index

<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
<% end %>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbady>
      <% @genres.each do |genrelist| %>
        <tr>
          <td><%= genrelist.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genrelist.id), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbady>
  </table>
</div>
