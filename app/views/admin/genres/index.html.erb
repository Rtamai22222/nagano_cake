<!--Admin::Genres#index-->
<div class="container mt-5">
  <%= render "shared/title", title: "ジャンル一覧・追加" %>
  <div class="row pt-3">
    <%= form_with model: @genre, url: admin_genres_path, class: "row align-items-center" do |f| %>
      <div class="col-md-2 form-group align-items-center">
        <label for="genre-name-field">ジャンル名</label>
      </div>
      <div class="col-sm-3 form-group ">
          <%= f.text_field :name, class: "form-control", id: "genre-name-field" %>
      </div>
      <div class="col-sm-auto form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbady>
          <% @genres.each do |genrelist| %>
            <tr>
              <td><%= genrelist.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genrelist.id), class: "btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbady>
      </table>
    </div>
  </div>
</div>