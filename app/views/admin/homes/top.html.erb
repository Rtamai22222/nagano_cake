<div class="container mt-5">
  <%= render "shared/title", title: "注文履歴一覧" %>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orderlist| %>
          <tr>
            <td>
              <%= link_to admin_order_path(orderlist.id) do %>
                <%= l orderlist.created_at %>
              <% end %>
            </td>
            <td><%= orderlist.customer.full_name %></td>
            <td><%= orderlist.order_details.total_amount %></td>
            <td><%= orderlist.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
