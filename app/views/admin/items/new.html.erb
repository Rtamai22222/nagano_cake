<div class="container mt-5">
  <%= render "shared/title", title: "商品新規登録" %>
  <div class="row">
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="row my-2 align-items-center">
        <%= f.label :image, "商品画像", class: "col-md-2" %>
        <div class="col-4 pe-0">
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        </div>
      </div>

      <div class="row my-2 align-items-center">
        <%= f.label :name, "商品名", class: "col-md-2" %>
        <div class="col-4 pe-0">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="row my-2">
        <%= f.label :introduction, "商品説明", class: "col-md-2 col-form-label" %>
        <div class="col-4 pe-0">
          <%= f.text_area :introduction, class: "col-auto form-control", rows: "4" %>
        </div>
      </div>

      <div class="row my-2 algin-items-center">
        <%= f.label :genre_id, "ジャンル", class: "col-md-2" %>
        <div class="col-4 pe-0">
          <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください"} %>
        </div>
      </div>

      <div class="row my-2 align-items-center">
        <%= f.label :price, "税抜価格", class: "col-md-2" %>
        <div class="col-4 pe-0">
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <div class="col-auto">
          <span class="ps-0">円</span>
        </div>
      </div>

      <div class="row my-2 align-items-center">
        <%= f.label :is_active, "販売ステータス", class: "col-md-2" %>
        <div class="col-4 pe-0">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", value: true %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", value: false %>
        </div>
      </div>

      <div class="col-sm-auto form-group my-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>