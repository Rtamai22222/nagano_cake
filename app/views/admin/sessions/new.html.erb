<div class="container mt-5">
  <%= render "shared/title", title: "管理者ログイン" %>
  <div class="row">
    <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
      <div class="field d-flex justify-content-center">
        <%= f.label :email, "メールアドレス", class: "col-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %>
      </div>

      <div class="field d-flex justify-content-center mt-3">
        <%= f.label :password, "パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "current-password", size: "50" %>
      </div>
<%
=begin
%>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
<%
=end
%>
      <div class="actions mt-5 justify-content-center d-flex">
        <%= f.submit "ログイン", class: "btn btn-primary col-auto" %>
      </div>
    <% end %>
  </div>
  <%= render "admin/shared/links" %>
</div>