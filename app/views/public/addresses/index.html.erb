<h1>Public::Addresses#index</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>
<div class="container">
  <%= render "shared/title", title: "配送先登録/一覧" %>
  <div class="row">
    <%= form_with model: @address, url: addresses_path do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <div class="row mb-3">
        <label for="inputPostalCode" class="col-md-3 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-auto ps-0">
          <!--<input type="email" class="form-control" id="inputEmail">-->
          <%= f.text_field :postal_code, class: "form-control", id: "inputPostalCode", placeholder: "例:0000000" %>
        </div>
      </div>
      <div class="row mb-3">
      <label for="inputAddress" class="col-md-3 col-form-label">住所</label>
        <div class="col-md-auto ps-0">
          <%= f.text_field :address, size: "50", class: "form-control", id: "inputAddress", placeholder: "例:東京都渋谷区代々木神園町00-00" %>
        </div>
      </div>
      <div class="row mb-3">
      <label for="inputName" class="col-md-3 col-form-label">宛名</label>
        <div class="col-md-auto ps-0">
          <%= f.text_field :name, class: "form-control", id: "inputName", placeholder: "例:令和太郎" %>
        </div>
        <div class="col ps-0">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |addresslist| %>
          <tr>
            <td><%= addresslist.postal_code %></td>
            <td><%= addresslist.address %></td>
            <td><%= addresslist.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(addresslist.id), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(addresslist.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>