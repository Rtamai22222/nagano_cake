<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<div class="container">
  <div class="row">
    <h3 class="col">ショッピングカート</h3>
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "col btn btn-danger" %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |itemlist| %>
        <tr>
          <td>
            <%= image_tag itemlist.item.get_image(56,40) %>
            <%= itemlist.item.name %>
          </td>
          <td><%= (itemlist.item.price*1.1).floor %></td>
          <td><%= itemlist.amount %></td>
          <td><%= (itemlist.item.price*1.1).floor*(itemlist.amount) %></td>
          <td><%= link_to "削除する", cart_item_path(itemlist.id), method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "買い物を続ける", items_path, class: "col btn btn-primary" %>
      <table class="col border border-dark">
        <td class="bg-light border-end border-dark">合計金額</td>
        <td><%= @total_price %></td>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <% if @cart_items.any? %>
      <%= link_to "情報入力に進む", new_order_path, class: "col-auto btn btn-success" %>
    <% end %>
  </div>
</div>