<h1>Public::Customers#show</h1>
<p>Find me in app/views/public/customers/show.html.erb</p>
<div class="container">
  <div class="row">
    マイページ

  </div>
  <div class="row align-items-center justify-content-start">
    <span class="col-auto">登録情報</span>
    <%= link_to '編集する', edit_customer_path, class: 'col-auto btn btn-success' %>
  </div>
  <div class="row">
    <table>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name + '　' + @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana + '　' + @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code%></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address%></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>仮設</td>
        <td><%= @customer.is_deleted %></td>
      </tr>
    </table>
  </div>
  <div class="row align-items-center justify-content-start">
    <span class="col-auto">配送先</span>
    <%= link_to '一覧を見る', addersses_path, class: 'col-auto btn btn-primary' %>
  </div>
  <div class="row align-items-center justify-content-start">
    <span class="col-auto">注文履歴</span>
    <%= link_to '一覧を見る', orders_path, class: 'col-auto btn btn-primary' %>
  </div>
</div>