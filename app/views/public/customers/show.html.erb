<div class="container mt-5">
  <%= render "shared/title", title: "マイページ" %>
  <div class="row align-items-center justify-content-start g-0 my-3">
    <span class="col-md-2 fw-bold">登録情報</span>
    <%= link_to '編集する', edit_customer_path, class: 'col-auto btn btn-success px-4' %>
  </div>
  <div class="row">
    <table>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name + '　' + @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana + '　' + @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code%></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address%></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row align-items-center justify-content-start g-0 mt-3">
    <span class="col-md-2 fw-bold">配送先</span>
    <%= link_to '一覧を見る', addresses_path, class: 'col-auto btn btn-primary px-4' %>
  </div>
  <div class="row align-items-center justify-content-start g-0 mt-2">
    <span class="col-md-2 fw-bold">注文履歴</span>
    <%= link_to '一覧を見る', orders_path, class: 'col-auto btn btn-primary px-4' %>
  </div>
</div>