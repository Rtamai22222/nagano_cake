<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/shared/search_genres', genres: @genres %>
    </div>
    <div class="col-md-10">
      <h3><%= @title %>一覧</h3>
      <span>全<%= @count %>件</span>
      <% @items.each do |itemlist| %>
        <div>
          <%= link_to item_path(itemlist.id) do %>
            <% if itemlist.image.attached? %>
              <%= image_tag itemlist.image %>
            <% else %>
              <%= image_tag 'default-image' %>
            <% end %>
          <% end %>
          <%= itemlist.name %>
          <%= itemlist.price %>
        </div>
      <% end %>
    </div>
  </div>
</div>


