<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/shared/search_genres', genres: @genres %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <h3><%= @title %>一覧</h3>
        <span>全<%= @count %>件</span>
        <% @items.each do |itemlist| %>
          <div class="col-md-3">
            <%= link_to item_path(itemlist.id) do %>
              <%= image_tag itemlist.get_image(150,90) %></br>
              <%= itemlist.name %></br>
              <!--<div><%#= itemlist.price %></div>-->
              <%= "¥" + number_with_delimiter(itemlist.price) %>
            <% end %>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>


