<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genrelist| %>
            <tr>
              <td><%= link_to genrelist.name, items_path(genre_id: genrelist.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-10">
      <h3><%= @title %>一覧</h3>
      <span>全<%= @count %>件</span>
      <% @items.each do |itemlist| %>
        <div>
          <% if itemlist.image.attached? %>
            <%= image_tag itemlist.image %>
          <% else %>
            <%= image_tag 'default-image' %>
          <% end %>
          <%= itemlist.name %>
          <%= itemlist.price %>
        </div>
      <% end %>
    </div>
  </div>
</div>


