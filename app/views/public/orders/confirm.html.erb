confirm
<div class="container">
  <%= render "shared/title", title: "注文情報確認" %>
  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |itemlist| %>
          <tr>
            <td>
              <%= image_tag itemlist.item.get_image(56,40) %>
              <%= itemlist.item.name %>
            </td>
            <td><%= (itemlist.item.price*1.1).floor %></td>
            <td><%= itemlist.amount %></td>
            <td><%= (itemlist.item.price*1.1).floor*(itemlist.amount) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table>
        <tr>
          <td>送料</td>
          <td><%= @shipping_cost %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= @total_payment %></td>
        </tr>
      </table>
    </div>

    <div class="row">
      <div>
        <span class="fw-bold">支払方法</span>
        <%= @order.payment_method_i18n %>
      </div>
      <div>
        <span class="fw-bold">お届け先</span>
        <%= @order.address_display %>
      </div>
    </div>
    <div class="row">
      <%= form_with model: @order, url: orders_path do |f|%>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :shipping_cost, value: @shipping_cost %>
        <%= f.hidden_field :total_payment, value: @total_payment %>
        <%= f.hidden_field :status, value: 0 %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>