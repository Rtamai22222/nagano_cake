<div class="container mt-5">
  <%= render "shared/title", title: "新規会員登録" %>
  <div class="mt-3">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field row align-items-center g-0">
        <span class="col-md-3">名前</span>
        <div class="col-md-4 row align-items-center g-0">
          <div class="col-2">
            <%= f.label :last_name, "(性)" %>
          </div>
          <div class="col-10 pe-5">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "given-name", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
        <div class="col-md-4 row align-items-center g-0">
          <div class="col-2">
            <%= f.label :first_name, "(名)" %>
          </div>
          <div class="col-10 pe-5">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "family-name", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <span class="col-md-3">フリガナ</span>
        <div class="col-md-4 row align-items-center g-0">
          <div class="col-2">
            <%= f.label :last_name_kana, "(セイ)" %>
          </div>
          <div class="col-10 pe-5">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "given-name", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
        <div class="col-md-4 row align-items-center g-0">
          <div class="col-2">
            <%= f.label :first_name_kana, "(メイ)" %>
          </div>
          <div class="col-10 pe-5">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "family-name", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :email, "メールアドレス"%>
        </div>
        <div class="col-md-4 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-2"></div>
          <div class="col-10 pe-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)"%>
        </div>
        <div class="col-md-4 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-2"></div>
          <div class="col-10 pe-5">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-md-8 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-1"></div>
          <div class="col-11 pe-5">
            <%= f.text_field :address, autofocus: true, class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        </div>
        <div class="col-md-4 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-2"></div>
          <div class="col-10 pe-5">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel-national", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <div class="col-md-4 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-2"></div>
          <div class="col-10 pe-5">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="field row align-items-center g-0 mt-2">
        <div class="col-md-3">
          <%= f.label :password_confirmation, "パスワード確認用" %>
        </div>
        <div class="col-md-4 row g-0">
          <!--↓余白の為の空のdiv-->
          <div class="col-2"></div>
          <div class="col-10 pe-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
          </div>
        </div>
      </div>

      <div class="actions row mt-3">
        <div class="field d-flex justify-content-center mt-3">
          <%= f.submit "新規登録", class: "btn btn-success px-5" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= render "shared/title", title: "既に登録済みの方" %>
    <div class="d-flex justify-content-center">
      <%= render "public/shared/links" %>
      <sapm class="ms-1">からログインしてください。</sapm>
    </div>
  </div>
</div>